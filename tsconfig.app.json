/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/app/shared/*"],
      "@aether/ui/button": ["libs/ui/src/components/button/index.ts"],
      "@aether/ui/card": ["libs/ui/src/components/card/index.ts"],
      "@aether/ui/input": ["libs/ui/src/components/input/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "packages/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
